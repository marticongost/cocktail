<?xml version="1.0" encoding="utf-8"?>

<div
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ui="http://www.whads.com/ns/cocktail/ui">

    <ui:resource href="cocktail.ui://styles/list.scss.css"/>

    <ui:property name="value"/>
    <ui:property name="member"/>
    <ui:property name="language"/>

    <?class
    update() {
        while (this.firstChild) {
            this.list.removeChild(this.firstChild);
        }
        if (this.value) {
            for (let item of this.value) {
                let entry = this.createEntry(item);
                this.list.appendChild(entry);
            }
        }
    }

    createEntry(item) {
        let entry = this.constructor.Entry.create();
        entry.item = item;
        entry.label.innerHTML = this.translateItem(item);
        return entry;
    }

    translateItem(item) {
        return this.member.items.translateValue(item);
    }
    ?>

    <ul id="list">
        <li ui:component="Entry">
            <span id="label"/>
        </li>
    </ul>

</div>

