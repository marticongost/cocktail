<?xml version="1.0" encoding="utf-8"?>

<div
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ui="http://www.whads.com/ns/cocktail/ui">

    <ui:resource href="cocktail.ui://styles/switcher.scss.css"/>

    <ui:property name="selectedContent">
        <?on changed
        if (oldValue) {
            if (!cocktail.ui.propertyIsChanging(oldValue, "selected")) {
                oldValue.selected = false;
            }
        }
        if (newValue) {
            if (!cocktail.ui.propertyIsChanging(newValue, "selected")) {
                newValue.selected = true;
            }
            newValue.selectingInitialContent = !oldValue;
        }
        ?>
    </ui:property>

    <?class
    connectedCallback() {
        if (!this.selectedContent && this.firstChild) {
            this.firstChild.selected = true;
        }
    }
    ?>

    <div id="contentWrapper">
        <slot id="content"/>
    </div>

</div>

